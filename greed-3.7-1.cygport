DESCRIPTION="Console Greed strategy game"
HOMEPAGE="http://www.catb.org/~esr/${PN}/"
SRC_URI="http://www.catb.org/~esr/${PN}/${P}.tar.gz"
PATCH_URI="3.7-CFLAGS.patch"

src_compile() {
	lndirs
	cd ${B}
	CFLAGS+=" -I/usr/include/ncurses"
	cygmake SFILE=/var/games/greed.scores
}

src_install() {
	cd ${B}
	dobin ${PN}.exe
	doman ${PN}.6
	dodoc READ.ME
}
